                                        android:background="#F8F7FC"
                                        android:ems="10"
                                        android:fontFamily="@font/antona_regular"
                                        android:inputType="textNoSuggestions|text"
                                        android:maxLines="1"
                                        android:paddingStart="10sp"
                                        android:paddingEnd="10sp"
                                        android:textSize="13sp"></EditText>

                                </LinearLayout>


                            </LinearLayout>

