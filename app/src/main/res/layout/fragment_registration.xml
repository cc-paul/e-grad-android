                                android:layout_height="25dp"/>

                            <CheckBox
                                android:id="@+id/chkValidation_3"
                                android:focusable="false"
                                android:clickable="false"
                                android:textSize="13sp"
                                android:fontFamily="@font/antona_regular"
                                android:text="Require at least one upper case letter"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"/>

                            <CheckBox
                                android:id="@+id/chkValidation_4"
                                android:focusable="false"
                                android:clickable="false"
                                android:textSize="13sp"
                                android:fontFamily="@font/antona_regular"
                                android:text="Require at least one number"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"/>

                            <CheckBox
                                android:id="@+id/chkValidation_5"
                                android:focusable="false"
                                android:clickable="false"
                                android:textSize="13sp"
                                android:fontFamily="@font/antona_regular"
                                android:text="Require at least one special character"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/lnRegister"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/text_layout"
                            android:backgroundTint="#23343C"
                            android:gravity="center">

                            <TextView
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/antona_regular"
                                android:gravity="center"
                                android:text="Register Account"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:id="@+id/lnSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/antona_regular"
                        android:text="Already have an account? "
                        android:textSize="14sp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/antona_regular"
                        android:text="Sign In"
                        android:textColor="#23343C"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

